<h1>Articles Listing Page</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
 
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td>
          <%= link_to '[View]', article_path(article) %>
          <%= link_to '[Edit]', edit_article_path(article) %>
          <%= link_to '[Delete]', article_path(article), data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<p>
<%= link_to '[New Article]', new_article_path %>
</p>